@model WebApplication1.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Udgivelses Dato: @Model.ReleaseDate.ToLongDateString()</li>
    <li>Dato Tilføjet: @Model.DateAdded.ToLongDateString()</li>
    <li>Antal på lager: @Model.NumberInStock</li>
</ul>
